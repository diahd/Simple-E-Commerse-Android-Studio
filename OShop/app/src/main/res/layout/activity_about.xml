<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp"
    tools:context=".AboutActivity"
    android:background="#DFC0CC">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/foto_diah"
        android:layout_marginTop="50dp"
        android:id="@id/img_profil"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_profil"
        android:layout_marginStart="6dp"
        android:layout_marginTop="70dp"
        android:text="Diah Dwiyanti"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_profil"
        android:layout_marginStart="6dp"
        android:layout_marginTop="90dp"
        android:text="1803421045"
        android:textSize="16sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/foto_aurin"
        android:layout_marginTop="170dp"
        android:id="@id/img_profil"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_profil"
        android:layout_marginStart="6dp"
        android:layout_marginTop="190dp"
        android:text="Fara Aurin Salsabila"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_profil"
        android:layout_marginStart="6dp"
        android:layout_marginTop="210dp"
        android:text="1803421043"
        android:textSize="16sp" />

</RelativeLayout>